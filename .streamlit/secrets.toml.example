# Streamlit Secrets Configuration Example
# Copy this file to .streamlit/secrets.toml and fill in your actual API keys

# API Keys
GROQ_API_KEY = "your_groq_api_key_here"

# Optional API Keys (for future use)
# WEATHER_API_KEY = "your_weather_api_key_here"
# MARKET_API_KEY = "your_market_api_key_here"

# Application Settings
DEFAULT_LANGUAGE = "English"
MODEL_NAME = "gemma2-9b-it"
MAX_TOKENS = 1000
TEMPERATURE = 0.7

# Feature Toggles
ENABLE_DISEASE_DETECTION = true
ENABLE_CHAT_ADVISOR = true
ENABLE_WEATHER_INFO = true
ENABLE_MARKET_PRICES = true

